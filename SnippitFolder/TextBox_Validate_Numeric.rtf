

Private Sub ValidateNumeric(TextB As TextBox)
Dim s As Integer

On Error GoTo Idiot_Control
With TextB
  Do While Not CBool(.Text = "" _
                  Or .Text = "-" _
                  Or .Text = "-." _
                  Or .Text = "." _
                  Or IsNumeric(.Text))
          
     s = .SelStart
    .Text = Left$(.Text, s - 1) + Mid$(.Text, s + 1)
    .SelStart = s - 1
  Loop
End With
Exit Sub
