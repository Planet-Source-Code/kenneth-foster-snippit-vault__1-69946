
'Save array example

Private Sub cmdSave_Click()
   Dim FileName As String
   Dim Free As Long
   
   FileName = App.Path & "\" & "ColorPal"    'name of file to be saved to
   
   If FileName <> "" Then
     
      Free = FreeFile
      
      Open FileName For Binary As #Free
      Put #Free, , ValMain   'this is the array to be saved
      Close #Free
   End If
   
End Sub

